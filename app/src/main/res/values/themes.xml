<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_main</item>
        <item name="colorPrimaryVariant">@color/light_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <!-- Dialog, Cards-->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorPrimarySurface">@color/light_main</item>
        <!-- Top tatus Bar-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Background window color-->
        <item name="android:windowBackground">@color/white</item>
        <!-- EditText background color-->
        <item name="editTextBackground">@color/light_text_input_background</item>
        <item name="textColorCustom">@color/black</item>
        <item name="mainBgCustom">@color/light_main_variant</item>
    </style>
</resources>